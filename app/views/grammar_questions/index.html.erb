<h1>Listing grammar_questions</h1>

<table>
  <thead>
    <tr>
      <th>Sequence number</th>
      <th>Content</th>
      <th>Grammar group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grammar_questions.each do |grammar_question| %>
      <tr>
        <td><%= grammar_question.sequence_number %></td>
        <td><%= grammar_question.content %></td>
        <td><%= grammar_question.grammar_group %></td>
        <td><%= link_to 'Show', grammar_question %></td>
        <td><%= link_to 'Edit', edit_grammar_question_path(grammar_question) %></td>
        <td><%= link_to 'Destroy', grammar_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

