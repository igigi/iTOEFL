<h1>Listing lb_comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Live broadcast</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lb_comments.each do |lb_comment| %>
      <tr>
        <td><%= lb_comment.content %></td>
        <td><%= lb_comment.user %></td>
        <td><%= lb_comment.live_broadcast %></td>
        <td><%= link_to 'Show', lb_comment %></td>
        <td><%= link_to 'Edit', edit_lb_comment_path(lb_comment) %></td>
        <td><%= link_to 'Destroy', lb_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lb comment', new_lb_comment_path %>
