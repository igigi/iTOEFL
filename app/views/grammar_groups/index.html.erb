<h1>Listing grammar_groups</h1>

<table>
  <thead>
    <tr>
      <th>Sequence number</th>
      <th>Group type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grammar_groups.each do |grammar_group| %>
      <tr>
        <td><%= grammar_group.sequence_number %></td>
        <td><%= grammar_group.group_type %></td>
        <td><%= link_to 'Show', grammar_group %></td>
        <td><%= link_to 'Edit', edit_grammar_group_path(grammar_group) %></td>
        <td><%= link_to 'Destroy', grammar_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

