<h1>Listing rb_comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Recorded broadcast</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rb_comments.each do |rb_comment| %>
      <tr>
        <td><%= rb_comment.content %></td>
        <td><%= rb_comment.user %></td>
        <td><%= rb_comment.recorded_broadcast %></td>
        <td><%= link_to 'Show', rb_comment %></td>
        <td><%= link_to 'Edit', edit_rb_comment_path(rb_comment) %></td>
        <td><%= link_to 'Destroy', rb_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rb comment', new_rb_comment_path %>
